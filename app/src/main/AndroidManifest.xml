<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chamikaprabath.myapplication">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


            </intent-filter>
        </activity>
        <activity android:name=".LoadingScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MedicationMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Contacts">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayContact" />
        <activity
            android:name=".HomePageActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NewMedication"
            android:parentActivityName=".MedicationMain" />
        <activity
            android:name=".FullListActivity"
            android:parentActivityName=".HomePageActivity" />
        <activity
            android:name=".TaskActivity"
            android:parentActivityName=".FullListActivity" />
        <activity
            android:name=".NewTaskActivity"
            android:parentActivityName=".FullListActivity" />
        <activity
            android:name=".UpdateTaskActivity"
            android:parentActivityName=".FullListActivity" />
        <activity
            android:name=".PriorityListActivity"
            android:parentActivityName=".HomePageActivity" />

        <receiver android:name=".AlarmReceiver" />

        <activity android:name=".MedicationUpdate" />
        <activity android:name=".MainActivity_BMI" />

    </application>

</manifest>