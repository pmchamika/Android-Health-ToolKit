<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:text="Drug Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="95dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="197dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="weight in kelogram"
        android:textColor="@color/background"

        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="95dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:text="Height"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="147dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="197dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="height in meters"
        android:textColor="@color/background"

        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:text="Last BMI"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="198dp" />

    <EditText
        android:id="@+id/editNop"
        android:layout_width="197dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="BMI Value"
        android:textColor="@color/background"

        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:text="New BMI"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="248dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="197dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="BMI Value"
        android:textColor="@color/background"

        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="248dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="EDIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="358dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:text="BMI Report"
        android:textColor="@color/text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:text="Expected Weight"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="301dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="197dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Kelograms to reduce"
        android:textColor="@color/background"

        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="300dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="48dp"
